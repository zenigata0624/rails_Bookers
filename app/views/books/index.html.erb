<!DOCTYPE HTML>
<html>
<head>
  <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'index', media: 'all', 'data-turbolinks-track': 'reload' %>
     <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="flash-destroy">
  <%= flash[:notice] %>
  </div>
  
  <div class= 'home-top'>
  <h1>Books</h1>
  </div>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%=link_to"Show",book_path(book.id)%></td>
        <td><%=link_to"Edit",edit_book_path(book)%></td>
        <td><%=link_to"Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <%end %>
    </tbody>
  </table>
  <div class ="create-title">
  <h2>New book</h2>
  </div>
  <% if @book.errors.any? %>
  <%= @book.errors.count %> errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  
  <%= form_with model: @book do |f| %>
  <div class ='field'>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>body</p>
  <%= f.text_area :body %>
  <div class="create">
 <%= f.submit 'Create Book' %>
 </div>
  <% end %>
  </div>
</body>
</html>